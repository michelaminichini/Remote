@model Template.Web.Features.Home.HomeViewModel
@{
    ViewData["Title"] = "Home";
}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a href="/Account/Logout" class="btn btn-secondary">Logout</a>
        </div>
    </div>

    <div class="tabs">
        <button class="btn btn-primary">Team</button>
        <button class="btn btn-primary">Richieste</button>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("History", "Home")'">Storico</button>
    </div>

    <div class="calendar mt-4">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Lunedì</th>
                    <th>Martedì</th>
                    <th>Mercoledì</th>
                    <th>Giovedì</th>
                    <th>Venerdì</th>
                    <th>Sabato</th>
                    <th>Domenica</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var week in Model.Weeks)

                {
                    <tr>
                        @foreach (var day in week)

                        {
                            <td>
                                <div class="day-header">@day.Date.Day</div>
                                <div class="events">
                                    @foreach (var eventItem in day.Events)

                                    {
                                        <div>@eventItem</div>
                                    }
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>